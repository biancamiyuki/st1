#include <iomanip>
#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
    double netbal;
	double d1;
	double payment;
	double interest;
	double d2;
	double monthlyrate;
	double avedailybal;


    
    cout << "Enter net Balance: ";
    cin >> netbal;
    cout << "Enter payment made: ";
    cin >> payment;
    cout << "Enter number of days in the billing cycle: ";
    cin >> d1;
    cout << "Enter number of days payment is made before billing cycle: ";
    cin >> d2;
    cout  << "Enter interest per month: ";
    cin >> monthlyrate;

    cout<< "Average Daily Balance: " << (netbal * d1 - payment * d2)/d1 << endl;
	cout << "Interest is " << avedailybal * monthlyrate << endl;
	cin >> interest;

	_getch();
    return 0;
}
